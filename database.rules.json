{
  "rules": {
    ".write": "false",
    "townHalls": {
      ".read": "true",
      ".write": "root.child('users').child(auth.uid).child('isAdmin').val() == true",
      "$townHallID": {
        ".read": "true",
        ".write": "root.child('users').child(auth.uid).child('isAdmin').val() == true"
      }
    },
    "zips" : {
      ".read": "true"
    },
    "townHallIds": {
      ".read": "true",
      ".write": "root.child('users').child(auth.uid).child('isAdmin').val() == true",
      "$townHallID": {
        ".validate": "newData.hasChildren(['eventId','lastUpdated'])"
      }
    },
    "townHallsOld": {
      ".read": "true",
      "$townHallID": {
        ".write": "root.child('users').child(auth.uid).child('isAdmin').val() == true"
      }
    },
    "UserSubmission": {
      ".read": "true",
      ".write": "auth.uid !== null",
      "$townHallID": {
        ".validate": "newData.hasChildren(['Member','eventId'])"
      }
    },
    "MOCs": {
     ".read": "true",
      "$mocKey": {
        "currentEvents": {
          ".write": "auth.uid !== null"
        }
      }
    },
    "townHallsErrors": {
      "$townHallID": {
        ".read": "true",
        ".write": "root.child('users').child(auth.uid).child('isAdmin').val() == true",
        ".validate": "newData.hasChildren(['Member','Party','State'])"
      }
    },
    "geolocate": {
      "state": {
        "$state" : {
            ".read": "true",
            ".write": "auth.uid !== null",
            ".validate": "newData.hasChildren(['lat','lng'])"
        }
      },
      "street": {
          "$address": {
            ".read": "true",
            ".write": "auth.uid !== null",
             ".validate": "newData.hasChildren(['lat','lng'])"
          }
      }
    },
    "zipZeroResults": {
      ".read": "false",
      ".write": "true",
      "$zip": {
        ".read": "false",
        ".write": "true",
        ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 10000"
      }
    },
    "users": {
      ".read": "false",
      "$user_id": {
        ".read": "$user_id === auth.uid",
        ".write": "$user_id === auth.uid"
      }
    }
  }
}
