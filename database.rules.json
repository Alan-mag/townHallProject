{
  "rules": {
     ".read": "true",
     ".write": "true",
        "townHalls" : {
           ".read": "true",
     			".write": "true",
              ".validate": "newData.hasChildren(['Member', 'Party, 'State','District','meetingType','Date','Time','timeZone','Location','streetAddress','City','StateAb','Zip'])",
							"Member": { ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length < 20"
                     },
              "Party": { ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length < 15"
                     },
              "State": { ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length < 15"
                     },
            	"District": { ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length < 6"
                     }
                   }

              }
}
